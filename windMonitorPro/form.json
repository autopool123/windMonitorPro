{
  "elements": [
    {
      "name": "APIKey",
      "type": "ValidationTextBox",
      "caption": "API-Schlüssel von meteoblue"
    },
    {
      "name": "Latitude",
      "type": "NumberSpinner",
      "caption": "Breitengrad (lat)",
      "digits": 6
    },
    {
      "name": "Longitude",
      "type": "NumberSpinner",
      "caption": "Längengrad (lon)",
      "digits": 6
    },
    {
      "name": "Altitude",
      "type": "NumberSpinner",
      "caption": "Höhe über Meer (m)"
    },
    {
      "name": "Zielhoehe",
      "type": "NumberSpinner",
      "caption": "Zielhöhe für Umrechnung (m)",
      "minimum": 1,
      "maximum": 100
    },
    {
      "name": "Referenzhoehe",
      "type": "NumberSpinner",
      "caption": "Sensorhöhe (Referenz, m)",
      "minimum": 1,
      "maximum": 200
    },
    {
      "name": "Alpha",
      "type": "NumberSpinner",
      "caption": "Rauigkeitsparameter (α)",
      "digits": 3,
      "minimum": 0.0,
      "maximum": 1.0
    },
    {
      "name": "UpdateInterval",
      "type": "NumberSpinner",
      "caption": "Abrufintervall (Minuten)",
      "minimum": 5,
      "maximum": 720
    },
    {
      "type": "Select",
      "name": "Modus",
      "caption": "Abrufmodus",
      "options": [
        { "caption": "Live-Daten von meteoblue laden (fetch)", "value": "fetch" },
        { "caption": "Lokale Datei verarbeiten (readfile)", "value": "readfile" }
      ]
    },
    {
      "type": "SelectVariable",
      "name": "StringVarID",
      "caption": "Ziel-String-Variable",
      "width": "400px",
      "validVariableTypes": [3],
      "allowCreation": true
    },
    {
      "name": "Aktiv",
      "type": "CheckBox",
      "caption": "Modul aktivieren"
    }
  ]
}
